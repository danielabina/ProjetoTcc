<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.tela_perfil"
    android:orientation="vertical">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/fundo_2"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginLeft="10dp"
        android:text="Cadastrou algo errado ? NÃ£o tem problema ,voce editar!"
        android:textColor="#000000"
        android:textSize="18dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/idlogoP"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/user"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/idNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_form_field_top"
            android:clickable="true"
            android:ems="500">

        </EditText>

        <TextView
            android:id="@+id/idEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_form_field_top"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:clickable="false"></TextView>

        <EditText
            android:id="@+id/idSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_form_field_top"
            android:clickable="true"
            android:ems="500"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/idHabilidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_form_field_top"
            android:clickable="true"
            android:ems="500" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_form_field_sqr"
            android:padding="10dp"
            android:onClick="editar"
            android:text="Salvar" ></Button>

    </LinearLayout>

</LinearLayout>