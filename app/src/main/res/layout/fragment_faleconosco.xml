<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EDEBEF"
    android:orientation="vertical"
    tools:context=".controller.tela_fale_conosco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/idlogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/esportes_png_7"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/idEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="DIGITE O SEU EMAIL"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:visibility="visible"
            tools:visibility="visible"></EditText>

        <EditText
            android:id="@+id/idSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:ems="500"
            android:hint="DESCRICAO"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:orientation="vertical"
        android:padding="35dp">

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A7433FB5"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:text="Enviar" />

    </LinearLayout>

</LinearLayout>