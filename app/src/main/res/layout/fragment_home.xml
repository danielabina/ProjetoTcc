<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.tela_inicial_"
    android:orientation="vertical">


    <Button
    android:id="@+id/btnMeusEventos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="200dp"
    android:background="@drawable/button_customizado"
    android:textSize="25sp"
    android:text="Meus Eventos"
    android:onClick="MeusEvento"
></Button>



    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnCriarEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_customizado"
        android:textSize="25sp"
        android:text="Organizar Evento"
        android:onClick="CadastrarEvento"
></Button>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="       *Voce poderá criar eventos escolha local,data e hora ">

    </TextView>

    <Button
        android:id="@+id/btnBuscarEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_customizado"
        android:textSize="25sp"
        android:text="Listar Eventos"
        android:onClick="BuscarEvento"


        ></Button>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="        *Voce poderá buscar eventos, preencha local desejado">

    </TextView>



</LinearLayout>