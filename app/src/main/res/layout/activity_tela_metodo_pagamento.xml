<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/fundo_2"></ImageButton>

    <ImageButton
        android:layout_width="396dp"
        android:layout_height="87dp"
        android:background="@drawable/evento_3"></ImageButton>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="30dp"
        android:background="#838383">
        <TextView
            android:id="@+id/modalidadeescolhida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="FUTEBOL"
            android:layout_alignParentLeft="true">
        </TextView>

        <TextView
            android:id="@+id/valorLocal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:textColor="#000000"
            android:text=" 13-08-2020 13:00"

            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="260dp"
            android:textColor="#000000"
            android:text=" Total : 1000"
            android:textSize="18dp"></TextView>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.4"
            android:contentDescription="Cartão VISA"
            android:src="@drawable/user"
            tools:ignore="Suspicious0dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.4"
            android:contentDescription="Cartão Master Card"
            android:src="@drawable/user" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_card_number"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">

            <EditText
                android:id="@+id/card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número do cartão"
                android:inputType="number"
                android:text="4485203648101323" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:hint="Nome proprietario cartão">

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mês"
                android:layout_marginLeft="28dp"
                android:inputType="number"
                android:text="01">

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ANO"
                android:layout_marginLeft="28dp"
                android:inputType="number"
                android:text="2023">

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Parcelas"
                android:inputType="number"
                android:layout_marginLeft="28dp"
                android:text="2">

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CCV"
                android:layout_marginLeft="28dp"
                android:inputType="number"
                android:text="2">

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>
    <Button
        android:id="@+id/btnProximoLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="FINALIZAR"
        android:background="@drawable/bg_form_field_sqr">

    </Button>
</LinearLayout>