<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/fundo_2"></ImageButton>

    <ImageButton
        android:layout_width="388dp"
        android:layout_height="76dp"
        android:background="@drawable/evento_1"></ImageButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="18dp"
        android:text="Quase lá! Aqui voce pode visualizar detalhes do local escolhido!"
        android:textColor="#000000"
        android:textSize="18dp"></TextView>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/rrr"></ImageButton>

    <TextView
        android:id="@+id/nomeLocal"
        android:layout_width="374dp"
        android:layout_height="62dp"
        android:layout_marginLeft="18dp"
        android:textSize="30sp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text="Descrição"
        android:textColor="#000000"
        android:textSize="22dp"></TextView>

    <TextView
        android:id="@+id/descricaolocal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="18dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18dp"></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/CriarEvento"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/criar_eventos">
        </ImageButton>

        <TextView
            android:id="@+id/enderecolocal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:text="ssss"
            android:textColor="#000000"
            android:textSize="18dp"></TextView>
    </RelativeLayout>

    <Button
        android:id="@+id/btnproximook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_form_field_sqr"
        android:layout_marginTop="15dp"
        android:text="Escolher">

    </Button>

</LinearLayout>
