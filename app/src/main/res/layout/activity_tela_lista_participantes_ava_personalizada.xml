<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/fundo_2"></ImageButton>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="88dp"
            android:layout_height="118dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/desc" />

            <TextView
                android:id="@+id/nomeParticipanteAva"
                android:layout_width="0dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/bola" />

            <TextView
                android:id="@+id/habilidadeParticipanteAva"
                android:layout_width="0dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="110dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/sexoParticipanteAva"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="19dp"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
