<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".controller.tela_metodo_pagamento"
    tools:showIn="@layout/activity_tela_metodo_pagamento"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="115dp"
            android:layout_gravity="top"
            android:scaleType="fitStart"
            android:background="@drawable/fundo_2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="Será necessário realizar o pagamento , para que seu dia esteja reservado. Vamos la?"
            android:textColor="#000000"
            android:textSize="18dp"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:background="#ffffff"
            android:padding="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/desc" />

                <TextView
                    android:id="@+id/nameLocalPag"
                    android:layout_width="0dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"

                    android:layout_marginRight="5dp"
                    android:src="@drawable/valor" />

                <TextView
                    android:id="@+id/pricePag"
                    android:layout_width="0dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="118dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/local" />

                <TextView
                    android:id="@+id/dataLocalPag"
                    android:layout_width="0dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


        <Button
            android:id="@+id/button_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_form_field_sqr"
            android:gravity="center"
            android:onClick="buy"
            android:padding="18dp"
            android:text="@string/button_buy"
            android:textColor="#fff" />
</LinearLayout>
