<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.tela_menu_eventos"
    android:orientation="vertical">



    <Button
        android:layout_marginTop="250dp"
        android:id="@+id/btnproximoeventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_customizado"
        android:textSize="25sp"
        android:text="PROXIMOS EVENTOS"
        android:onClick="ProximosEventos"
        ></Button>

    <Button
        android:id="@+id/btnanterior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_customizado"
        android:textSize="25sp"
        android:text="EVENTOS ANTERIORES"
        ></Button>


</LinearLayout>